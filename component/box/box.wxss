.ia{
  animation: iaa 0.3s;
  animation-timing-function: ease-in-out;
}

@keyframes iaa{
  0%{
  transform: scale(0.2);  
  }
  50%{
      transform: scale(0.75); 
  }
  75%{
      transform: scale(1);
  }
}

.ma{
  animation: maa 0.3s;
  animation-timing-function: ease-in-out;
}

@keyframes maa{
  0%{
  transform: scale(1);  
  }
  25%{
      transform: scale(1.2); 
  }
  75%{
      transform: scale(1.1); 
  }
  100%{
      transform: scale(1);
  }
}

