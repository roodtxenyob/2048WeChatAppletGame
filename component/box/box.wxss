.box{
  background-color: rgb(187,173,160);
  width: 85vw;
  height: 85vw;
  margin: 0 auto;
  border-radius: 10rpx; 
  position: relative;
}

.item{
  background-color: rgb(205,193,180);
  width: 18vw;
  height: 18vw;
  display: inline-block;
  vertical-align:top;
  margin-left: 2.6vw;
  margin-top: 2.6vw; 
  border-radius: 5rpx;
  /* 解决底部留白 */
}

.pieces{
  width: 85vw;
  height: 85vw;
  position: absolute;
  top: 0px;
}

.piecesItem{
  width: 18vw;
  height: 18vw;
  display: inline-block;
  vertical-align:top;
  margin-left: 2.6vw;
  margin-top: 2.6vw; 
  border-radius: 5rpx;
  font-size: 10vw;
  text-align: center;
  line-height: 18vw;
}

